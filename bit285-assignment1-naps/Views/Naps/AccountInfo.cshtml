@model bit285_assignment1_naps.Models.User
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

    @{
        Layout = "_Layout";
        ViewBag.title = "Account Info";
    }

        <h1>New Account Information</h1>
        <fieldset>
            <form action="/Naps" method="post">
                <div>
                    <label asp-for="FirstName">First Name</label>
                    <input asp-for="FirstName" value="Ian" />
                    <span asp-validation-for="FirstName">* required</span>
                </div>
                <div>
                    <label asp-for="LastName">Last Name</label>
                    <input asp-for="LastName" value="Bansenauer" />
                    <span asp-validation-for="LastName">* required</span>
                </div>
                <div>
                    <label asp-for="EmailAddress">Email Address</label>
                    <input asp-for="EmailAddress" value="ian@home.com" />
                    <span asp-validation-for="EmailAddress">* required</span>
                </div>
                <div>
                    <label asp-for="Program">Program</label>
                    <select asp-for="Program">

                        <option>Web App Dev</option>
                        <option>Mobile App Dev</option>
                        <option>Front-end Dev</option>
                    </select>
                </div>
                <div>
                    @*<input type="button" onclick="location.href='/password-info.html';" value="Create Password"/>*@

                    <input type="submit" value="Create Password" />
                    <input type="button" value="Reset" />
                </div>
            </form>
        </fieldset>


