@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model bit285_assignment1_naps.Models.User
@{
    Layout = "_Layout";
    ViewBag.title = "Select Password";
}

<h1>Choose a Password</h1>
<fieldset>
    <form asp-action="SelectPassword" method="post">
        <div>
            <label asp-for="Password">Possible Passwords</label>
            <input asp-for="Password" value=@Model./>
        </div>
        <div>
            <input type="submit" value="Create Account" />
            <input type="button" value="Reset" />
        </div>
    </form>
</fieldset>
